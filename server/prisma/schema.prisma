generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id                String   @id @default(cuid())
  fileName          String?
  fileSize          Int?
  wrappedFileKey    String?
  wrappedFileKeyIv  String?
  ownerId           String?  @db.VarChar(191)
  note              String?
  createdAt         DateTime @default(now())
  chunks            Chunk[]
  jobs              Job[]
}

model Chunk {
  id              String  @id @default(cuid())
  file            File    @relation(fields: [fileId], references: [id])
  fileId          String
  hash            String  @db.VarChar(128)
  size            Int?
  wrappedChunkKey String?
  wrapIv          String?
  chunkIv         String?
}

model Hash {
  id      String @id @default(cuid())
  sha256  String @unique @db.VarChar(128)
  refCount Int   @default(0)
}

model Job {
  id        String    @id @default(cuid())
  file      File      @relation(fields: [fileId], references: [id])
  fileId    String
  createdAt DateTime  @default(now())
  status    String    @default("pending")
  items     JobItem[]
}

model JobItem {
  id        String   @id @default(cuid())
  job       Job      @relation(fields: [jobId], references: [id])
  jobId     String
  hash      String   @db.VarChar(128)
  status    String   @default("needs_upload")
  uploadUrl String?
}
